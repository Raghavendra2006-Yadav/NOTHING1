<body>
    <div class="container">
        <h1>üçΩÔ∏è What's for Dinner?</h1>
        <p class="subtitle">Discover fusion recipes by combining categories with global cuisines</p>

        <div class="controls">
            <div class="select-group">
                <label for="category">Recipe Category</label>
                <select id="category">
                    <option value="">Select a category...</option>
                </select>
            </div>

            <div class="select-group">
                <label for="cuisine">Area/Cuisine</label>
                <select id="cuisine">
                    <option value="">Select a cuisine...</option>
                </select>
            </div>

            <button class="search-btn" id="searchBtn">Find Recipes</button>
        </div>

        <div class="error-message" id="errorMessage"></div>

        <div class="loading" id="loading">
            <div class="spinner"></div>
            <p>Searching for fusion recipes...</p>
        </div>

        <div class="results-container" id="resultsContainer" style="display: none;">
            <h2 class="results-header" id="resultsHeader"></h2>
            <div class="recipes-grid" id="recipesGrid"></div>
        </div>

        <div class="no-results" id="noResults">
            <div class="no-results-icon">üîç</div>
            <h2>No Fusion Recipes Found</h2>
            <p>We couldn't find any recipes that match both your selected category and cuisine.</p>
            <p>Try a different combination to discover new fusion recipes!</p>
        </div>
    </div>

    <script>
        // API Configuration
        const API_BASE = 'https://www.themealdb.com/api/json/v1/1';
        
        // State Management
        const state = {
            categories: [],
            cuisines: [],
            selectedCategory: '',
            selectedCuisine: ''
        };

        // DOM Elements
        const elements = {
            categorySelect: document.getElementById('category'),
            cuisineSelect: document.getElementById('cuisine'),
            searchBtn: document.getElementById('searchBtn'),
            loading: document.getElementById('loading'),
            resultsContainer: document.getElementById('resultsContainer'),
            resultsHeader: document.getElementById('resultsHeader'),
            recipesGrid: document.getElementById('recipesGrid'),
            noResults: document.getElementById('noResults'),
            errorMessage: document.getElementById('errorMessage')
        };

        // Initialize the application
        async function init() {
            try {
                await loadCategoriesAndCuisines();
                setupEventListeners();
            } catch (error) {
                showError('Failed to initialize the application. Please refresh the page.');
                console.error('Initialization error:', error);
            }
        }

        // Load categories and cuisines from API
        async function loadCategoriesAndCuisines() {
            try {
                const [categoriesData, cuisinesData] = await Promise.all([
                    fetch(`${API_BASE}/list.php?c=list`).then(res => res.json()),
                    fetch(`${API_BASE}/list.php?a=list`).then(res => res.json())
                ]);

                state.categories = categoriesData.meals || [];
                state.cuisines = cuisinesData.meals || [];

                populateDropdown(elements.categorySelect, state.categories, 'strCategory');
                populateDropdown(elements.cuisineSelect, state.cuisines, 'strArea');
            } catch (error) {
                throw new Error('Failed to load categories and cuisines');
            }
        }

        // Populate dropdown with options
        function populateDropdown(selectElement, data, key) {
            data.forEach(item => {
                const option = document.createElement('option');
                option.value = item[key];
                option.textContent = item[key];
                selectElement.appendChild(option);
            });
        }

        // Setup event listeners
        function setupEventListeners() {
            elements.searchBtn.addEventListener('click', handleSearch);
            
            elements.categorySelect.addEventListener('change', (e) => {
                state.selectedCategory = e.target.value;
                updateSearchButton();
            });

            elements.cuisineSelect.addEventListener('change', (e) => {
                state.selectedCuisine = e.target.value;
                updateSearchButton();
            });
        }

        // Update search button state
        function updateSearchButton() {
            const isValid = state.selectedCategory && state.selectedCuisine;
            elements.searchBtn.disabled = !isValid;
        }

        // Handle search
        async function handleSearch() {
            if (!state.selectedCategory || !state.selectedCuisine) {
                showError('Please select both a category and a cuisine.');
                return;
            }

            hideError();
            showLoading(true);
            hideResults();

            try {
                const fusionRecipes = await fetchFusionRecipes(
                    state.selectedCategory,
                    state.selectedCuisine
                );

                showLoading(false);

                if (fusionRecipes.length > 0) {
                    displayRecipes(fusionRecipes);
                } else {
                    showNoResults();
                }
            } catch (error) {
                showLoading(false);
                showError('Failed to fetch recipes. Please try again.');
                console.error('Search error:', error);
            }
        }

        // Fetch fusion recipes using Promise.all
        async function fetchFusionRecipes(category, cuisine) {
            try {
                const [categoryData, cuisineData] = await Promise.all([
                    fetch(`${API_BASE}/filter.php?c=${category}`).then(res => res.json()),
                    fetch(`${API_BASE}/filter.php?a=${cuisine}`).then(res => res.json())
                ]);

                const categoryRecipes = categoryData.meals || [];
                const cuisineRecipes = cuisineData.meals || [];

                // Find intersection using Set for O(n) complexity
                const cuisineIds = new Set(cuisineRecipes.map(meal => meal.idMeal));
                
                const fusionRecipes = categoryRecipes.filter(meal => 
                    cuisineIds.has(meal.idMeal)
                );

                return fusionRecipes;
            } catch (error) {
                throw new Error('Failed to fetch recipes from API');
            }
        }

        // Display recipes in grid
        function displayRecipes(recipes) {
            elements.resultsContainer.style.display = 'block';
            elements.resultsHeader.textContent = `Found ${recipes.length} Fusion Recipe${recipes.length !== 1 ? 's' : ''}`;
            elements.recipesGrid.innerHTML = '';

            recipes.forEach((recipe, index) => {
                const card = createRecipeCard(recipe, index);
                elements.recipesGrid.appendChild(card);
            });
        }

        // Create recipe card element with lazy loading
        function createRecipeCard(recipe, index) {
            const card = document.createElement('div');
            card.className = 'recipe-card';
            
            const img = document.createElement('img');
            img.className = 'recipe-image lazy';
            img.alt = recipe.strMeal;
            
            // Lazy load images
            setTimeout(() => {
                img.src = recipe.strMealThumb;
                img.onload = () => img.classList.add('loaded');
            }, index * 50);

            const title = document.createElement('div');
            title.className = 'recipe-title';
            title.textContent = recipe.strMeal;

            card.appendChild(img);
            card.appendChild(title);

            // Optional: Add click handler to view full recipe details
            card.addEventListener('click', () => {
                window.open(`https://www.themealdb.com/meal/${recipe.idMeal}`, '_blank');
            });

            return card;
        }

        // UI Helper Functions
        function showLoading(show) {
            elements.loading.classList.toggle('active', show);
        }

        function showNoResults() {
            elements.noResults.classList.add('active');
            elements.resultsContainer.style.display = 'none';
        }

        function hideResults() {
            elements.noResults.classList.remove('active');
            elements.resultsContainer.style.display = 'none';
        }

        function showError(message) {
            elements.errorMessage.textContent = message;
            elements.errorMessage.classList.add('active');
        }

        function hideError() {
            elements.errorMessage.classList.remove('active');
        }

        // Start the application
        init();
    </script>
</body>
</html>
